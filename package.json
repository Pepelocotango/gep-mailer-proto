{
  "name": "gep-mailer",
  "private": true,
  "version": "1.0.0",
  "description": "Eina d'escriptori per a la gestió de sol·licituds de disponibilitat de personal mitjançant correu electrònic.",
  "author": "Pep",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:clean": "rm -rf node_modules/.vite dist && npm run dev",
    "build": "tsc && vite build",
    "build:linux": "npm run build && cross-env BRANCH_NAME=local BUILD_NUMBER=dev electron-builder --linux",
    "build:win": "npm run build && cross-env BRANCH_NAME=local BUILD_NUMBER=dev electron-builder --win",
    "build:mac": "npm run build && cross-env BRANCH_NAME=local BUILD_NUMBER=dev electron-builder --mac",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "start:clean": "rm -rf node_modules/.vite dist && npm start"
  },
  "dependencies": {
    "lucide-react": "^0.300.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "10.4.21",
    "concurrently": "8.2.2",
    "cross-env": "^10.1.0",
    "electron": "38.1.1",
    "postcss": "8.5.4",
    "tailwindcss": "3.4.17",
    "typescript": "~5.5.3",
    "vite": "6.4.1",
    "wait-on": "7.2.0",
    "electron-builder": "^24.13.3"
  }
  ,
  "build": {
    "appId": "com.gep.mailer",
    "productName": "GEP-MAILER",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.cjs"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "artifactName": "GEP-MAILER_v${version}-${env.BRANCH_NAME}-build${env.BUILD_NUMBER}-Linux.${ext}"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "artifactName": "GEP-MAILER_v${version}-${env.BRANCH_NAME}-build${env.BUILD_NUMBER}-Windows-Setup.${ext}"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "artifactName": "GEP-MAILER_v${version}-${env.BRANCH_NAME}-build${env.BUILD_NUMBER}-macOS.${ext}"
    }
  }
}
